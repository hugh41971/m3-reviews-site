@model IEnumerable<ReviewsSite.Models.Restaurant>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Style/StyleSheet.css" />
    <link href="~/Style/StyleSheet.css" rel="stylesheet" />
    <title>RestaurantIndex</title>
</head>
<body>

    <h1>We Can Eat It!</h1>
    <span>Reviews of restaurants we've enjoyed</span>
    <main class="main container">
        
    </main>
    <h2>Restaurant List</h2>

    @foreach (var restaurant in Model)
    {
        <p>Title; <a href="/Restaurant/Details/@restaurant.Id">@restaurant.Name</a> </p>
        <hr />
    }
</body>
</html>
